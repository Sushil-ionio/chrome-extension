{
  "manifest_version": 3,
  "name": "Product Details Extension",
  "version": "1.0",
  "description": "Get product details from an ID",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {},
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.in/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": "background.js"
  }
}
